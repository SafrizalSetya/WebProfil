<script>
    function ellipsizeTextBox(id) {
        var el = document.getElementById(id);
        var wordArray = el.innerHTML.split(' ');
        while(el.scrollHeight > el.offsetHeight) {
            wordArray.pop();
            el.innerHTML = wordArray.join(' ') + '...';
        }
    }

    if($("#block-content").length > 0){
        ellipsizeTextBox("block-content");
    }

    function loadView(path, id, div) {
        if(path == 'streaming_news'){
            strcache = false;
        }else{
            strcache = true;
        }
        type = '';
        if(path=="ads_showcase_region"){
                            type = 'detail';
                    }
        $.ajax({
            url: 'https://sindikasi.inews.id/widget/desktop/'+path,
            cache: strcache,
            timeout:3000,
            data: {id: id, div: div, slug:'jatim', subslug:'', type:type, source:'region'},
            success: function (html) {
                $("#"+div).append(html);
            }
        });
    }

    function liveStream(path, div) {
        let url = "https://jatim.inews.id/getstreaming/"+path+"/"+"jatim";

        $.ajax({
            type: 'GET',
            url: url,
            success: function (html) {
                $("#"+div).append(html);
            }
        });
    }
</script>
