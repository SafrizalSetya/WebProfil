	setTimeout(function () {
		$('.share-social .st-custom-button').each(function(i){
			var shareBtn = $(this).attr('data-network');
			$(this).click(function(){
				window.dataLayer.push({
					event: 'social-share',
					social_platform: shareBtn
				});
			});
		});
	}, 5000);
});
</script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: "https://jatim.inews.id/load-aiml",
                success: function (response) {
                    $('#res-aiml').html(response);
                    geolocationInews("newsDetail", 'perupa');
                }
            });
        });
    </script>
<script>
    $( document ).ready(function() {
        window.fbAsyncInit = function() {
            FB.init({
            appId            : '469902783457214',
            autoLogAppEvents : true,
            xfbml            : true,
            version          : 'v9.0'
            });

            var execution = false;
            FB.Event.subscribe('comment.create', function(commentResponse) {
                if(!execution){
                    window.dataLayer = window.dataLayer || [];
                    window.dataLayer.push({
                        'event': 'comment',
                        'article_title': document.title
                    });
                    execution = true;
                }
            });
        };
    });
</script>
