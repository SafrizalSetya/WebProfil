    <script>
        $(document).ready(function() {
            var pageStatus = new LazyLoad({
                elements_selector:'.share-social',
                threshold:0,
                callback_enter:function(){
                    window.dataLayer.push({
                        event:'article-milestone',
                        article_title:"Kisah Pelukis Basoeki Abdullah Selalu Pilih Warna Hijau untuk Sosok Nyi Roro Kidul",
                        article_id:"1114776",
                        page:"1",
                        scroll_measure_percent:'100%',
                        scroll_measure_value:100
                    });
                }
            });

            $('.box-outlink a').click(function () {
                window.dataLayer.push({
                    event: 'affiliate-link-click',
                    affiliate_name: "Kisah Pelukis Basoeki Abdullah Selalu Pilih Warna Hijau untuk Sosok Nyi Roro Kidul"
                });
            });

            var affiliateImpression = new LazyLoad({
                elements_selector:'.box-outlink',
                threshold: 0,
                callback_enter: function(){
                    window.dataLayer.push({
                        event: 'affiliate-link-impression',
                        affiliate_title: "Kisah Pelukis Basoeki Abdullah Selalu Pilih Warna Hijau untuk Sosok Nyi Roro Kidul"
                    });
                }
            });
        });
    </script>
                    <script>
                function eventTrigerList(obj,row) {
                    var url = obj.getAttribute("href");
                    var name = row[0];
                    var position = row[1];
                    var publish_date = row[2];
                    var article_id = row[3];
                    var category = row[4];
                    var title = row[5];
                    var type = row[6];

                    dataLayer.push({
                        event: "promotion_click",
                        event_category: 'article',
                        event_action: "article_list_click",
                        event_label: category +' - '+ url,

                        content_type: type,
                        article_title: title,
                        publish_date: publish_date,

                        ecommerce: {
                        promoClick: {
                            promotions: [
                            {
                                id: article_id,
                                name: title,
                                creative: url,
                                position: position + '_' + name
                            }
                            ]
                        }
                        }
                    });
                }

                function generalEvent(obj,row) {
                    var category = row[0];
                    var action = row[1];
                    var url = obj.getAttribute("href");

                    dataLayer.push({
                        event : 'general_event',
                        event_category: category,
                        event_action: action,
                        event_label: url,
                        data_source : 'Non AMP'
                    });
                }

                var SudahDiLoad=0;
                $(document).ready(function() {
                    $(window).on('scroll', function() {
                        if(SudahDiLoad==0){
                            if ($(window).scrollTop() >= $('#about-inews').offset().top + $('#about-inews').outerHeight() - window.innerHeight) {
                                    window.dataLayer.push({
                                    event : 'general_event',
                                    event_category: 'scroll_depth',
                                    event_action: '100%',
                                    event_label: window.location.href
                                });
                                SudahDiLoad=1;
                            }
                        }
                    });
                });
            </script>
            </body>
</html>
